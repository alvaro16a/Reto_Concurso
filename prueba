nivel=1
basededatos=BaseDeDatos()
respuesta=basededatos.get_pregunta(nivel)
lista=[1,2,3,4]
lista2=[]
contador=0
while contador <4:
    valor=random.choice(lista)
    lista2.append(valor)
    lista.remove(valor)
    contador=contador+1
print(respuesta[0])
print("1->  ",respuesta[lista2[0]])
print("2->  ",respuesta[lista2[1]])
print("3->  ",respuesta[lista2[2]])
print("4->  ",respuesta[lista2[3]])





